<body>

    <div class="container" style="margin-top: 50px; margin-bottom: 50px;">
        <div class="border w-75 m-auto" style="background: #fff; box-shadow: 0 0 20px 0px rgba(0, 0, 0, 0.1);">
              <form class="text-center" action="/forgot_password" method="post">
              <h2 class="text-danger">Forgot Password</h2>
                  <input type="email" placeholder="E-mail" name="email" class="form-control w-75 m-auto"/><br />
                  <button class="btn btn-dark text-white rounded-pill w-75" >Sign In &#8594;</button><br /><br />
                  <% if( typeof(err) !=="undefined") { %> 
                    <p><%= err %></p>
                    <% } %>
              </form>  
             </div>  
        </div> 
